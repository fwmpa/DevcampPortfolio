<%= form_for(@portfolio_item) do |f| %>

  <div>
    <%= f.label :title, style: "display: block" %>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :subtitle, style: "display: block" %>
    <%= f.text_field :subtitle %>
  </div>

  <div>
    <%= f.label :body, style: "display: block" %>
    <%= f.text_area :body %>
  </div>

  <ul>
    <!-- creates nested forms for technologies attributes -->
    <%= f.fields_for :technologies do |techonoly_form| %>
      <li>
        <%= techonoly_form.label :name%>
        <%= techonoly_form.text_field :name%>
      </li>
    <% end %>
  </ul>

  <div>
    <%= f.submit %>
  </div>
<% end %>